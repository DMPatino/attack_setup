#ART SERVICE
#save the file as /usr/local/bin/ascii_broadcast.sh
#make it executable
#sudo chmod +x /usr/local/bin/ascii_broadcast.sh
#place all your ASCII .txt files in /opt/ascii_art/

#Creates ART Service
cat <<EOL | sudo tee /etc/systemd/system/ascii_broadcast.service > /dev/null
[Unit]
Description=ART Service
After=network.target

[Service]
ExecStart=/usr/local/bin/ascii_broadcast.sh
Restart=always
User=root

[Install]
WantedBy=multi-user.target
